<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC   
    "-//mybatis.org//DTD Mapper 3.0//EN"  
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.RootDao">
	<select id="searchByName" resultType="entity.Root">
	select * from root where username=#{username}
	</select>
	
	<select id="loginSearch" resultType="java.lang.String">
	select * from root where username=#{username} and password=#{password}
	</select>
	
</mapper> 
    
